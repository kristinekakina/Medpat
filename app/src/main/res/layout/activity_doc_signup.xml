<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DocSignup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:fontFamily="cursive"
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="PLease fill in the following form:"
            android:textSize="30dp" />

        <EditText
            android:textSize="15dp"
            android:layout_margin="6dp"
            android:id="@+id/mEdtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Your Name"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="144dp" />

        <EditText
            android:textSize="15dp"
            android:layout_margin="6dp"
            android:id="@+id/mEdtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Your Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:textSize="15dp"
            android:layout_margin="6dp"
            android:id="@+id/mEdtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword" />

        <EditText
            android:textSize="15dp"
            android:layout_margin="6dp"
            android:id="@+id/mEdtPassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword" />

        <EditText
            android:textSize="15dp"
            android:id="@+id/mEdtId"
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Id"
            android:inputType="number" />

        <EditText
            android:textSize="15dp"
            android:layout_margin="6dp"
            android:id="@+id/mEdtContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Your Tel Number"
            android:inputType="number" />
        <EditText
            android:textSize="15dp"
            android:layout_margin="6dp"
            android:id="@+id/mEdtSpecialty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Your Specialty"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="144dp" />

        <TextView
            android:fontFamily="cursive"
            android:layout_margin="6dp"
            android:textSize="15dp"
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Below,ellaborate your work location " />


        <EditText
            android:id="@+id/mEditInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:textSize="15dp" />

        <Button
            android:id="@+id/mBtnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:text="SUBMIT"
            android:textSize="20dp" />
        <Button
            android:id="@+id/mBtnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:text="LOGIN"
            android:textSize="20dp" />
    </LinearLayout>


</ScrollView>